        <Label Content="AUTHENTIFICATION" HorizontalAlignment="Left" Margin="329,50,0,0" VerticalAlignment="Top" FontSize="72" FontWeight="Bold" FontFamily="Poppins"/>
        <TextBox x:Name="txbCode" HorizontalAlignment="Left" Margin="574,251,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="347" FontSize="24" materialDesign:TextFieldAssist.UnderlineBrush="#673ab7" />
        <Button x:Name="btVerifier" Content="Valider" HorizontalAlignment="Left" Margin="642,366,0,0" VerticalAlignment="Top" FontSize="24" Click="btVerifier_Click" Height="44" materialDesign:ButtonAssist.CornerRadius="25"/>
